{
  "scope": false,
  "body": false,
  "emoji": false,
  "lowercaseTypes": true,
  "initialCommit": {
    "isEnabled": false,
    "emoji": ":tada:",
    "message": "Initial commit"
  },
  "types": [
    {
      "type": "Feature:",
      "description": "实现了新特性"
    },
    {
      "type": "Fix:",
      "description": "修复了一个 Bug"
    },
    {
      "type": "Style:",
      "description": "调整展现样式，没改动程序或业务逻辑"
    },
    {
      "type": "Remove:",
      "description": "移除废弃或多余的文件、代码"
    },
    {
      "type": "Perf:",
      "description": "提升了程序的性能"
    },
    {
      "type": "Build:",
      "description": "调整打包的脚本"
    },
    {
      "type": "CI:",
      "description": "调整持续集成的脚本"
    },
    {
      "type": "Docs:",
      "description": "改动文档、注释"
    },
    {
      "type": "Chore:",
      "description": "这个 commit 很乱乱乱！"
    },
    {
      "type": "Refactor:",
      "description": "重构了某个功能点"
    },
    {
      "type": "Test:",
      "description": "增删改测试代码"
    }
  ],
  "scopeList": true,
  "scopes": [ "Sdk", "Support", "None" ],
  "rules": {
    "maxChar": 72,
    "minChar": 10,
    "endWithDot": false
  }
}
